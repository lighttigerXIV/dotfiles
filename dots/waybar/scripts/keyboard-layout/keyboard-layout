#!/usr/bin/env python3

import subprocess
import json

def get_output(command) -> str:
    return subprocess.run(command, shell=True, capture_output=True, text=True).stdout.strip()

layout = get_output("hyprctl devices -j | jq -r '.keyboards[] | select(.main == true) | .active_keymap'")

